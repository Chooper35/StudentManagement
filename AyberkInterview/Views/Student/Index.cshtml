@model IEnumerable<AyberkInterview.Models.Student>
@{
    Layout = "_Layout";
}
<h1>Students</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Age</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = student.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = student.Id })" class="btn btn-danger">Delete</a>
                    </td> 
                </tr>
            }
        }
    </tbody>
</table>